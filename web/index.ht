<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notcoin Clone</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Inter", sans-serif;
      background: radial-gradient(circle at top, #1c1b29, #0d0c17);
      color: white;
      text-align: center;
    }

    .container {
      padding: 20px;
    }

    .coin {
      margin-top: 30px;
    }

    .coin img {
      width: 150px;
      animation: rotate 6s linear infinite;
    }

    @keyframes rotate {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .balance {
      font-size: 36px;
      font-weight: bold;
      margin: 10px 0;
    }

    .energy-bar {
      width: 80%;
      height: 10px;
      background: #444;
      border-radius: 5px;
      margin: 10px auto;
      position: relative;
    }

    .energy {
      width: 70%;
      height: 100%;
      background: linear-gradient(90deg, #ffd700, #ff8c00);
      border-radius: 5px;
    }

    .stats {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 10px;
      font-size: 14px;
      color: #ccc;
    }

    .buttons {
      margin-top: 30px;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 15px;
    }

    button {
      background: #222;
      color: white;
      border: 1px solid #444;
      border-radius: 12px;
      padding: 12px 20px;
      font-size: 16px;
      cursor: pointer;
      transition: 0.2s;
    }

    button:hover {
      background: #333;
    }

    .invite-section {
      margin-top: 40px;
      padding: 20px;
      background: linear-gradient(145deg, #3a1c71, #d76d77, #ffaf7b);
      border-radius: 20px;
    }

    .invite-section h2 {
      margin: 0;
      font-size: 22px;
    }

    .invite-btn {
      background: #ffcc00;
      color: #000;
      font-weight: bold;
      margin-top: 10px;
    }

    footer {
      margin-top: 40px;
      font-size: 13px;
      color: #888;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>🏆 Notcoin Clone</h2>

    <div class="coin">
      <img src="https://upload.wikimedia.org/wikipedia/commons/3/36/Bitcoin_sign.svg" alt="Coin">
    </div>

    <div class="balance">258,879,776</div>
    <div class="stats">
      <div>⚡ 8000 / 10,000</div>
      <div>👥 99+ Frens</div>
      <div>🚀 Boosts</div>
    </div>

    <div class="energy-bar">
      <div class="energy"></div>
    </div>

    <div class="buttons">
      <button onclick="earn()">💰 Earn</button>
      <button onclick="invite()">🤝 Invite</button>
      <button onclick="boost()">⚡ Boost</button>
      <button onclick="leaderboard()">🏅 Top Players</button>
    </div>

    <div class="invite-section">
      <h2>🎉 Invite Friends!</h2>
      <p>Get bonus coins for each friend you invite.</p>
      <button class="invite-btn" onclick="invite()">Invite Now</button>
    </div>

    <footer>Made with ❤️ for Telegram Mini App</footer>
  </div>

  <script>
    // Telegram WebApp integration
    const tg = window.Telegram?.WebApp;
    if (tg) tg.expand();

    function earn() {
      alert("💰 You earned 500 coins!");
    }

    function invite() {
      alert("🤝 Share your invite link with friends!");
    }

    function boost() {
      alert("⚡ Boost activated!");
    }

    function leaderboard() {
      alert("🏆 Coming soon!");
    }
  </script>
</body>
</html>
